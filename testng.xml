<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite">
    <parameter name="browser" value="chrome"/>
    <listeners>
        <listener class-name="utility.ReportManager"/>
    </listeners>
    <test verbose="2" name="Registration Test">
        <classes>
            <class name="tests.TestCase_Register">
                <methods>
                    <include name="verifyRegistrationWithAllMandatoryFields"/>
                </methods>
            </class>
            <class name="tests.TestCase_Login">
                <methods>
                    <include name="verifyLoginWithValidCredentials"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>